            vertical: screenHeight * 0.025, // Ø­ÙˆØ§Ù„ÙŠ 3% Ù…Ù† Ø§Ø±ØªÙØ§Ø¹ Ø§Ù„Ø´Ø§Ø´Ø©
            horizontal: screenWidth * 0.05, // Ø­ÙˆØ§Ù„ÙŠ 8% Ù…Ù† Ø¹Ø±Ø¶ Ø§Ù„Ø´Ø§Ø´Ø©
